<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the project.project form view to add legal case fields -->
    <record id="view_project_form_legal_case" model="ir.ui.view">
        <field name="name">project.project.form.legal.case</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='description']" position="before">
                <page string="Legal Case Details">
                    <group>
                        <group string="Case Identification">
                            <field name="office_file_number" 
                                   class="o_xxs_form_view"
                                   readonly="is_file_number_locked"/>
                            <div class="o_row">
                                <button name="action_get_next_office_file_number" 
                                        type="object" 
                                        class="oe_inline btn-info" 
                                        string="Get Next Number"
                                        invisible="office_file_number or is_file_number_locked"
                                        context="{'tracking_disable': True}"
                                        groups="base.group_user"/>
                            </div>
                            <field name="court_name" />
                            <field name="court_circle" />
                            <field name="lawsuit_filing_date" />
                            <field name="first_degree_case_number_year" />
                            <field name="second_degree_case_number_year" />
                        </group>
                        <group string="Client Details">
                            <field name="client_status" />
                        </group>
                        <group string="Opponent Details">
                            <field name="opponent_status" />
                            <field name="opponent_name" />
                            <field name="opponent_address" />
                            <field name="opponent_phone" />
                            <field name="opponent_attorney_name" />
                            <field name="opponent_attorney_phone" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


    <!-- Actions for different entity types -->
    <record id="action_view_legal_entities_all" model="ir.actions.act_window">
        <field name="name">All Legal Entities</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[("tag_ids.name", "in", ["Case", "Matter"])]</field>
        <!-- <field name="context">{}</field> -->
        <field name="context">{'group_by': 'stage_id'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first legal entity!
            </p>
            <p>
                Create a new case or matter to start managing legal work.
            </p>
        </field>
    </record>

    <record id="action_view_legal_cases_all" model="ir.actions.act_window">
        <field name="name">All Cases</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[("tag_ids.name", "=", "Case")]</field>
        <!-- <field name="context">{'create_from_cases': True}</field> -->
        <field name="context">{'group_by': 'stage_id', 'create_from_cases': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first case!
            </p>
            <p>
                Create a new legal case to start managing court proceedings.
            </p>
        </field>
    </record>

    <record id="action_view_legal_matters_all" model="ir.actions.act_window">
        <field name="name">All Matters</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[("tag_ids.name", "=", "Matter")]</field>
        <!-- <field name="context">{'create_from_matters': True}</field> -->
        <field name="context">{'group_by': 'stage_id', 'create_from_matters': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first matter!
            </p>
            <p>
                Create a new matter to start managing legal work.
            </p>
        </field>
    </record>

    <!-- Legal Entities Menu -->
    <menuitem id="menu_legal_entities"
        name="All Legal Entities"
        parent="project.menu_main_pm"
        action="legal_practice_management.action_view_legal_entities_all"
        sequence="0" />

    <!-- Cases Menu -->
    <menuitem id="menu_cases"
        name="Cases"
        parent="project.menu_main_pm"
        action="legal_practice_management.action_view_legal_cases_all"
        sequence="0" />

    <!-- Matters Menu -->
    <menuitem id="menu_matters"
        name="Matters"
        parent="project.menu_main_pm"
        action="legal_practice_management.action_view_legal_matters_all"
        sequence="0" />
</odoo>